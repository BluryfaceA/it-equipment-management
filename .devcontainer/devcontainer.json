{
  "name": "IT Equipment Management",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "forwardPorts": [3306, 8000, 8001, 8002, 8003, 8004, 8005, 8501],

  "portsAttributes": {
    "8501": {
      "label": "Frontend",
      "onAutoForward": "openBrowser"
    }
  },

  "postCreateCommand": "docker compose version",
  "postStartCommand": "docker compose up -d",

  "remoteUser": "vscode"
}
