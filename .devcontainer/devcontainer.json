{
  "name": "IT Equipment Management",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },

  "forwardPorts": [3306, 8000, 8001, 8002, 8003, 8004, 8005, 8501],

  "portsAttributes": {
    "8501": {
      "label": "Frontend (Streamlit)",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "API Gateway",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "echo 'âœ… Codespace ready! Run: docker compose up -d'",

  "remoteUser": "vscode"
}
